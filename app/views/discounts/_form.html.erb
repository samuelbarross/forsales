
<div class="ibox ">
  <div class="ibox-title">
    <h2>Formul√°rio</h2>
  </div>
  <div class="ibox-content">
    <%= simple_form_for(@discount) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :value %>
        <%= f.input :kind, collection: Discount.kinds.keys %>
        <%= f.input :kind, collection: enum_options_for_select(Discount, :kind) %>
        <%= f.input :status, collection: enum_options_for_select(Discount, :status) %>
    </div>

    </br>

    <%= f.button :submit, class: "btn btn-default btn-pills waves-effect waves-themed" %>

    <% end %>
  </div>
</div>